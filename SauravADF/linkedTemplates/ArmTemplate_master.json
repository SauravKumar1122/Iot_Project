{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "SauravADF"
		},
		"ls_dataflow_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'ls_dataflow'"
		},
		"ls_iot_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'ls_iot'"
		},
		"ls_lookup_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'ls_lookup'"
		},
		"ls_sql_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ls_sql'"
		},
		"ls_dataflow_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://sauravadls.dfs.core.windows.net/"
		},
		"ls_http_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://raw.githubusercontent.com"
		},
		"ls_iot_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://iotstorageproj.dfs.core.windows.net/"
		},
		"ls_lookup_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://sauravadls.dfs.core.windows.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "SauravADF_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ls_dataflow_accountKey": {
						"value": "[parameters('ls_dataflow_accountKey')]"
					},
					"ls_iot_accountKey": {
						"value": "[parameters('ls_iot_accountKey')]"
					},
					"ls_lookup_accountKey": {
						"value": "[parameters('ls_lookup_accountKey')]"
					},
					"ls_sql_connectionString": {
						"value": "[parameters('ls_sql_connectionString')]"
					},
					"ls_dataflow_properties_typeProperties_url": {
						"value": "[parameters('ls_dataflow_properties_typeProperties_url')]"
					},
					"ls_http_properties_typeProperties_url": {
						"value": "[parameters('ls_http_properties_typeProperties_url')]"
					},
					"ls_iot_properties_typeProperties_url": {
						"value": "[parameters('ls_iot_properties_typeProperties_url')]"
					},
					"ls_lookup_properties_typeProperties_url": {
						"value": "[parameters('ls_lookup_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "SauravADF_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'SauravADF_ArmTemplate_0')]"
			]
		}
	]
}